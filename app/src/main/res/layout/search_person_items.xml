<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="216dp"
    android:layout_margin="3dp"
    app:cardCornerRadius="6dp"
    android:layout_marginLeft="2dp"
    android:background="@null">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
      android:background="@null"
       >
<androidx.cardview.widget.CardView
    android:layout_width="125dp"
    android:layout_height="150dp"
    android:layout_margin="7dp"
    app:cardCornerRadius="12dp"
    android:elevation="10dp"
    android:background="@null"

    >


    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/tv_srch_actor_poster"
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:layout_margin="-4dp"
     android:scaleType="centerCrop"

        />
    <View

        android:id="@+id/rv_mov_shadow1"
        android:layout_marginTop="6dp"
        android:layout_gravity="bottom"
        android:layout_width="130dp"
        android:alpha="1"
        android:layout_height="80.9dp"
        android:background="@drawable/shadow"
        />

</androidx.cardview.widget.CardView>


        <TextView
    android:id="@+id/tv_srch_actor_title"
    android:layout_width="90dp"
    android:layout_height="18dp"
    android:fontFamily="@font/crete_round"
    android:textColor="@android:color/white"
    android:text="Tom Cruise"
    android:gravity="center"
            android:layout_gravity="center"
    android:layout_marginTop="-2dp"


    />
        <View

            android:id="@+id/rv_mov_shadow"
            android:layout_marginTop="3dp"
           android:layout_gravity="center"
            android:layout_width="105dp"
            android:layout_height="0.9dp"
            android:layout_below="@id/rv_actors"
            android:background="@drawable/tool_bar_shadow"
            />
        <TextView
            android:id="@+id/tv_srch_actor_overview"
       android:layout_marginTop="3dp"
            android:layout_width="106dp"
            android:layout_height="33.6dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="7sp"
            android:gravity="center"
android:layout_gravity="center"
            />


    </LinearLayout>

</LinearLayout>