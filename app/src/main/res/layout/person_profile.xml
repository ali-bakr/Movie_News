<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true"

    >

    <ScrollView
        android:background="@color/colorDarkBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/iv_per_Prof_cover"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@color/colorGray"
                />
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="-220dp"
                android:alpha="0.52"
                android:layout_height="220dp"
                android:background="@color/colorDarkBack"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="87dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="-44dp"
                android:background="@null"
                android:elevation="10dp"
                app:cardCornerRadius="8dp"
                >


                <ImageView
                    android:id="@+id/iv_per_pro_poster"
                    android:layout_width="80dp"
                    android:layout_height="87dp"
                    android:layout_margin="-4dp"
                    android:scaleType="centerCrop"
                    />

            </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_marginTop="-82dp"
    android:layout_marginLeft="136dp"
    android:layout_width="200dp"
    android:layout_height="76dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_per_Prof_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textColor="@android:color/white"
        android:text=""
        android:textSize="21sp"
        android:fontFamily="@font/arimo"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_per_Prof_job"
        android:layout_marginTop="-3dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:textColor="@android:color/white"
        android:text="Acting"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        />


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="26dp"
      android:orientation="horizontal">

       <ImageView
           android:id="@+id/iv_per_Prof_face"
           android:layout_marginLeft="-2dp"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:src="@drawable/face"
           />
       <ImageView
           android:id="@+id/iv_per_Prof_insta"
           android:layout_marginTop="4dp"
           android:layout_marginLeft="14dp"
           android:layout_width="17dp"
           android:layout_height="16.5dp"
           android:background="@drawable/insta"/>
       <ImageView
           android:id="@+id/iv_per_Prof_twitter"
           android:layout_marginTop="3.9dp"
           android:layout_marginLeft="17dp"
           android:layout_width="18dp"
           android:layout_height="16dp"
           android:background="@drawable/twitter2"/>

   </LinearLayout>


</LinearLayout>

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Biography : "
                android:layout_marginTop="22dp"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:layout_marginLeft="41dp"
                />
            <TextView
                android:id="@+id/tv_per_Prof_biography"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="2dp"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="41dp"
                />
            <View
                android:layout_marginTop="6dp"
                android:layout_width="190dp"
                android:layout_gravity="center"
                android:layout_height="1.6dp"
                android:background="@drawable/tool_bar_shadow"
                />



            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Birthday : "
                android:layout_marginTop="12dp"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:layout_marginLeft="41dp"
                />
            <TextView
                android:id="@+id/tv_per_Prof_birthdate"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="2dp"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:layout_marginLeft="41dp"
                />
            <View
                android:layout_marginTop="6dp"
                android:layout_width="190dp"
                android:layout_gravity="center"
                android:layout_height="1.6dp"
                android:background="@drawable/tool_bar_shadow"
                />


            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="death date : "
                android:layout_marginTop="12dp"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:layout_marginLeft="41dp"
                />
            <TextView
                android:id="@+id/tv_per_Prof_deathdate"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="2dp"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:layout_marginLeft="41dp"
                />
            <View
                android:layout_marginTop="6dp"
                android:layout_width="190dp"
                android:layout_gravity="center"
                android:layout_height="1.6dp"
                android:background="@drawable/tool_bar_shadow"
                />
            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="gender : "
                android:layout_marginTop="12dp"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:layout_marginLeft="41dp"
                />
            <TextView
                android:id="@+id/tv_per_Prof_gender"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="2dp"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:layout_marginLeft="41dp"
                />
            <View
                android:layout_marginTop="6dp"
                android:layout_width="190dp"
                android:layout_gravity="center"
                android:layout_height="1.6dp"
                android:background="@drawable/tool_bar_shadow"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Place ofBirth : "
                android:layout_marginTop="12dp"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:layout_marginLeft="41dp"
                />
            <TextView
                android:id="@+id/tv_per_Prof_bearthplace"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="2dp"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:layout_marginLeft="41dp"
                />
            <View
                android:layout_marginTop="6dp"
                android:layout_width="190dp"
                android:layout_gravity="center"
                android:layout_height="1.6dp"
                android:background="@drawable/tool_bar_shadow"
                />





            <TextView
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:text="also Known For : "
                android:layout_marginTop="12dp"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:layout_marginLeft="41dp"
                />
            <TextView
                android:id="@+id/tv_per_Prof_alsoknownfor"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="2dp"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:layout_marginLeft="41dp"
                />
            <View


                android:layout_marginTop="6dp"
                android:layout_width="190dp"
                android:layout_gravity="center"
                android:layout_height="1.6dp"
                android:background="@drawable/tool_bar_shadow"
                />
            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:text="Profiles : "
                android:layout_marginTop="12dp"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:layout_marginLeft="41dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_profiles"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingBottom="7dp"
                android:background="@null"
                />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>